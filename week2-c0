from francislib import temperature.get_temperature
from francislib import sounds.set_alarm
import time 

temperature = get_temperature()
if temperature >=100:
    for i in range(5):
        alarm_state = True
        set_alarm(alarm_state)
        count = 5
        time.sleep(count)
        alarm_state = False
        set_alarm(alarm_state)
        time.sleep(2)
        count = 5-(i+1)
else:
    alarm_state = False
    set_alarm(alarm_state)
